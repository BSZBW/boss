                    ?> <span class="otherSources">(<?=$this->transEsc('Other Sources')?>: <?php
                } else {
                    ?>, <?php
                } ?><a href="<?=$this->recordLink()->getUrl($current['id'])?>"><?=$this->transEsc("source_$source", array(), $source)?></a><?php
