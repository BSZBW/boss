<?
   $lang = $this->layout()->userLang;
   $heading = $settings->get('heading_'.$lang) !== null ? $settings->get('heading_'.$lang) : '';
?>

<div class="col-sm-<?=(12/$count)?>">
    <div class="well clearfix">
        <? if (!empty($heading)): ?>
        <h5><?=$this->escapeHtml($heading)?></h5>
        <? endif; ?>
        <? if (count($settings->get('link')) > 0): ?>
        <ul>            
            <? foreach ($settings->get('link') as $k => $link): ?>
            <?
                if(strpos($link, '://') === FALSE) {
                    $url = $this->url($link);
                    $class = 'internal';
                } else {
                    $url = $link;
                    $class = 'external';
                }
                $label = isset($settings->get('label_'.$lang)[$k]) ? $settings->get('label_'.$lang)[$k] : $settings->get('label_de')[$k];
            ?>
            <li>
                <a href="<?=$url?>" class="<?=$this->escapeHtmlAttr($class)?>"><?=$this->escapeHtml($label)?></a>
            </li>
            <? endforeach; ?>
        </ul>
        <? endif; ?>
        <? if ($settings->get('text_'.$lang)): ?>
        <p><?=$this->escapeHtml($settings->get('text_'.$lang))?></p>
        <? endif; ?>
    </div>
    
    
</div>