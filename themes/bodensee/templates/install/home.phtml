// Set page title.
$this->headTitle($this->translate('auto_configure_title'));

// Set up breadcrumbs:
$this->layout()->breadcrumbs = '<li class="active">' . $this->transEsc('auto_configure_title') . '</li>';
?>
<div class="col-sm-12">
    <h2><?= $this->transEsc('auto_configure_title') ?></h2>
    <?= $this->flashmessages() ?>
    <?php $errors = 0;
    foreach ($this->checks as $check): ?>
        <?php if (!$check['status']) $errors++; ?>
        <div class="alert alert-<?= $check['status'] ? 'success' : 'danger' ?>"><?= $this->escapeHtml($check['title']) ?>
            ... <?= $check['status'] ? $this->transEsc('test_ok') : $this->transEsc('test_fail') . ' <a class="btn btn-danger" href="' . $this->url('install-' . strtolower($check['fix'])) . '">' . $this->transEsc('test_fix') . '</a>' ?></div>
    <?php endforeach; ?>

    <?php if ($errors == 0): ?>
        <p>No problems were found. You may wish to <a
                    href="<?= $this->url('install-done') ?>">Disable Auto
                Configuration</a> at this time.</p>
    <?php endif; ?>
</div>
