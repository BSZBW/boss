<?php $rand = rand(0, 9999)?>
  <tr>
    <th><?=$this->transEsc('Subjects')?>:</th>
    <td id="showmore-items-<?=$rand?>">
      <?php $count = 0 ?>
      <?php foreach ($subjects as $field): ?>
