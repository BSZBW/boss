            <?=$this->escapeHtml($titleol) ?><br/><?= $this->escapeHtml($sectionol) ?>
            <?php endif; ?>
        </h3>
        <? if (!empty($titleol)): ?>
            <h4><?=$this->escapeHtml($title) ?><br/><?= $this->string()->cleanEsc($section) ?></h4>
        <? endif; ?>

        <? if ($this->userlist()->getMode() !== 'disabled'): ?>
