            <div class="savedLists hidden alert alert-info" id="savedLists">
                <strong><?= $this->transEsc("Saved in") ?>:</strong>
            </div>
        <? endif; ?>

        <?php $detailList = $this->detailList('Items'); ?>
        <?=$this->record($this->driver)->renderTemplate(
            'table.phtml',
            ['data' => $detailList]
        ) ?>
