      <span class="recordcover pt-icon pt-<?=$this->driver->getPubTypeId()?>"></span>
    <? endif; ?>
    <? if ($pubType): ?>
      <p class="text-center"><?=$this->transEsc($pubType)?></p>
    <? endif; ?>

    <div class="external-links">
      <? $pLink = $this->driver->getPLink();
          if($pLink && false): ?>
        <span>
          <a href="<?=$this->escapeHtmlAttr($pLink)?>" class="external">
            <?=$this->transEsc('View in EDS')?>
          </a>
        </span><br />
      <? endif; ?>
      <? $pdfLink = $this->driver->getPdfLink();
          if ($pdfLink): ?>
        <span>
          <a href="<?=$pdfLink?>" class="icon pdf fulltext external hasicon">
            <?=$this->transEsc('PDF Full Text')?>
          </a>
        </span><br />
      <? endif; ?>
      <? if ($this->driver->hasHTMLFullTextAvailable()): ?>
        <span>
          <a href="<?=$this->recordLink()->getUrl($this->driver, 'fulltext')?>#html" class="icon html fulltext external">
