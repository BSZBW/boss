    <div class="col-sm-<?=$inputSize ?>">  
        <? $libraries = $this->libraries()->getActive($this->client()->getIsils()) ?>        
        <? if(count($libraries) > 0): ?>  
            <? $checked = isset($params['AusgabeOrt']) ? $params['AusgabeOrt'] :'';?>
            <? foreach($libraries as $libkey =>  $library): ?>            
